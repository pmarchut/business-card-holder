@model EmployeeIndexViewModel
@{ 
    ViewBag.Title = "Employees";
}

<br />
<h1>Employees</h1>

<form asp-controller="Employee" asp-action="Index" method="get" class="mt-3">
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="FirstName" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="FirstName" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="LastName" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="LastName" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="JobTitle" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="JobTitle" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="Telephone" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="Telephone" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="MobileTelephone" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="MobileTelephone" class="m-1" />
        </div>
        <div class="col-md-2">
            <label asp-for="Email" class="col-form-label m-1"></label>
        </div>
        <div class="col-md-4 col-sm-10">
            <input type="text" asp-for="Email" class="m-1" />
        </div>
        <div class="col-md-12 text-left">
            <button type="submit" class="btn btn-info m-1">Filter</button>
        </div>
    </div>        
</form>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Job Title</th>
                    <th><i class="fa fa-address-card-o" aria-hidden="true"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employee employee in Model.Employees)
                {
                    <tr>
                        <td>
                            @employee.FirstName
                        </td>
                        <td>
                            @employee.LastName
                        </td>
                        <td>
                            @employee.JobTitle
                        </td>
                        <td class="text-center">
                            <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info m-1">Details</a>                        
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model Employee

@{
    ViewBag.Title = "Delete " + Model.FirstName + ' ' + Model.LastName;
}

<h3>@ViewBag.Title</h3>

<form asp-controller="Employee" asp-action="Delete" method="post" class="mt-3">
    <h2>Are you sure?</h2>
    <div>
        <a asp-controller="Firm" asp-action="Employees" asp-route-id="@Model.FirmId" class="btn btn-primary m-1">No</a>
        <button type="submit" class="btn btn-primary m-1">Yes</button>
    </div>
</form>

@model Firm
@{
    ViewBag.Title = "Delete " + Model.Name;
}

<h3>@ViewBag.Title</h3>

<form asp-controller="Firm" asp-action="Delete" method="post" class="mt-3">
    <h2>Are you sure?</h2>
    <div>
        <a asp-controller="Firm" asp-action="Index" class="btn btn-primary m-1">No</a>
        <button type="submit" class="btn btn-primary m-1">Yes</button>
    </div>
</form>
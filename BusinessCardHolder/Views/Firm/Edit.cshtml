@model Firm
@{
    ViewBag.Title = "Edit " + Model.Name;
}

<form asp-controller="Firm" asp-action="Edit" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="NIP" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NIP" class="form-control" placeholder="NIP" />
            <span asp-validation-for="NIP" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PostalCode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PostalCode" class="form-control" placeholder="Postal Code" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Telephone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Telephone" class="form-control" placeholder="Telephone" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Notes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Notes" class="form-control rounded-0" rows="3" placeholder=""></textarea>
        </div>
    </div>
    <div>
        <a asp-controller="Firm" asp-action="Index" class="btn btn-primary m-1">Cancel</a>
        <button type="submit" class="btn btn-primary m-1">Submit</button>
    </div>
</form>